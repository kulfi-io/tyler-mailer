{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./ts-dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "module": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es5",
        "lib": [
          "es2016",
          "dom"
      ]
    },
    "include": [
        "./src/**/*", 
        "emails"
    ],
    "exclude": [
      "/node_modules"
    ]
  }